{
    "name": "deuce",
    "version": "0.1.0-SNAPSHOT",
    "description": "DEUCE - Deuce is (not yet) Emacs under Clojure",
    "repository": {
        "type": "git",
        "url": "https://github.com/hraberg/deuce.git"
    },
    "main": "index.html",
    "js-flags": "--harmony_arrow_functions",
    "window": {
        "width": 800,
        "height": 600,
        "min_width": 600,
        "min_height": 400,
        "toolbar": false
    },
    "dependencies": {
        "java": "0.4.6",
        "mmap.js": "0.2.1",
        "ws": "0.7.1",
        "diff": "1.2.2",
        "virtual-dom": "1.3.0",
        "html-to-vdom": "0.5.4",
        "jsdom": "4.0.1",
        "diff-dom": "1.0.0"
    },
    "devDependencies": {
        "browserify": "9.0.3",
        "watchify": "2.4.0",
        "node-webkit-builder": "1.0.10",
        "benchmark": "1.0.0",
        "eslint": "0.15.0",
        "csslint": "0.10.0"
    },
    "scripts": {
        "vdw": "watchify -d vd-client.js -o vd-client-bundle.js",
        "vd": "browserify -d vd-client.js > vd-client-bundle.js && node --harmony vd-server.js"
    },
    "eslintConfig": {
        "ecmaFeatures": {
            "arrowFunctions": true,
            "blockBindings": true,
            "generators": true
        },
        "rules": {
            "quotes": [2, "single"],
            "no-underscore-dangle": false,
            "no-redeclare": false
        },
        "env": {
            "node": true
        }
    }
}
